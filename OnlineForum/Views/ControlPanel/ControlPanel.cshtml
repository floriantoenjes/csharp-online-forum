
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4 mb-4">The best Online Forum</h1>
</div>

<div class="d-flex">
    <div class="col-6" style="flex-grow: 1; overflow-y: scroll; max-height: 42em">
        <h4 class="text-center">Private Messages</h4>
        @foreach (var privateMessage in ViewBag.PrivateMessages)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@privateMessage.Subject</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Html.ActionLink( (string) privateMessage.Sender.UserName, "UserDetails", "User", new {userId = privateMessage.Sender.Id}) at @privateMessage.SentAt</h6>
                    <p class="card-text">@privateMessage.Body</p>
                </div>
            </div>
        }
    </div>

    <div class="col-6">
        <h4 class="text-center">Subscriptions</h4>
        @if (ViewBag.User.Subscriptions.Count == 0)
        {
            <p class="text-center">You don't have subscribed to any threads yet.</p>
        }

        @foreach (var subscription in ViewBag.User.Subscriptions)
        {
            <div class="row mb-4">
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <p class="mr-4 mb-0">@Html.ActionLink((string) subscription.Name, "Thread", "Thread", new {threadId = subscription.Id})</p>
                    <button class="btn btn-danger" onclick="unsubcribeFromThread(@subscription.Id)">Unsubscribe</button>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function unsubcribeFromThread(threadId){
        $.post("@Url.Action("UnsubscribeFromThread", "ControlPanel")" + "?threadId=" + threadId).done(() => {
            location.reload();
        });
    }
</script>