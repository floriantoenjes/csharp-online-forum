@model OnlineForum.Models.Post

<div class="text-center">
    <h1 class="display-4">@ViewBag.Thread.Name</h1>
</div>

<div>
    <ul>
        @foreach (var post in ViewBag.Thread.Posts)
        {
            <li>@post.Content</li>
        }
    </ul>
</div>

<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(post => post.Content, new { @class = "control-label" })
            @Html.TextBoxFor(post => post.Content, new { @class= "form-control" } )
        </div>
        
        <button class="btn btn-primary" type="submit">Create Post</button>
    }
</div>